        mc:Ignorable="d"
           Title="Информация о программе" FontFamily="Arial" WindowStartupLocation="CenterScreen" FontSize="17" Height="850" MinHeight="850" Width="1200" MinWidth="1200" Background="#BDF9FF" Icon="/Images/Matrix_Icon.ico">
