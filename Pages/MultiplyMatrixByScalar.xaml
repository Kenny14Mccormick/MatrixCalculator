<Page x:Class="Матричный_калькулятор.Pages.MultiplyMatrixByScalar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Матричный_калькулятор.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       Title="MultiplyMatrixByScalar" FontFamily="Arial" FontSize="17" >
    <Grid>
        <StackPanel>
            <TextBlock Margin="0,5" FontWeight="Bold" Text="Умножение матрицы на скаляр"/>
            <TextBlock Text="Умножение матрицы на скаляр - это процесс, при котором каждый элемент матрицы умножается на заданный скаляр." TextWrapping="Wrap" TextAlignment="Justify"/>
            <TextBlock Margin="0,5" FontWeight="Bold" Text="Пример умножения матрицы на скаляр"/>
            <TextBlock Text="Пусть у нас есть матрица A и скаляр k:" TextWrapping="Wrap" TextAlignment="Justify"/>
            <TextBlock>A =</TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Margin="0,0,10,0">1</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="0" >2</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="1" Margin="0,0,10,0">3</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="1" >4</TextBlock>
            </Grid>
            <TextBlock>Тогда матрица A, умноженная на скаляр k, равна:</TextBlock>
            <TextBlock>kA =</TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Margin="0,0,10,0">2*1</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="0" >2*2</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="1" Margin="0,0,10,0">2*3</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="1" >2*4</TextBlock>
            </Grid>
            <TextBlock>То есть:</TextBlock>
            <TextBlock>kA =</TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Margin="0,0,10,0">2</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="0" >4</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="1" Margin="0,0,10,0">6</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="1" >8</TextBlock>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
