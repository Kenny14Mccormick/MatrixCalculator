<Page x:Class="Матричный_калькулятор.Pages.SubtractMatrices"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Матричный_калькулятор.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
        Title="SubtractMatrices" FontFamily="Arial" FontSize="17" >

    <Grid>
        <StackPanel>
            <TextBlock Margin="0,5" FontWeight="Bold" Text="Вычитание матриц"/>
            <TextBlock Text="Вычитание матриц, как и сложение, выполняется поэлементно. Это означает, что каждый элемент одной матрицы вычитается из соответствующего элемента другой матрицы." TextWrapping="Wrap" TextAlignment="Justify"/>
            <TextBlock Margin="0,5" FontWeight="Bold" Text="Условия для вычитания матриц"/>
            <TextBlock Text="Для того чтобы вычесть одну матрицу из другой, они должны быть одинакового размера. То есть, если у вас есть две матрицы A и B, размеры которых равны m x n и p x q соответственно, то m должно быть равно p, и n должно быть равно q." TextWrapping="Wrap" TextAlignment="Justify"/>
            <TextBlock Margin="0,5" FontWeight="Bold" Text="Пример вычитания матриц"/>
            <TextBlock Text="Пусть у нас есть две матрицы A и B:" TextWrapping="Wrap" TextAlignment="Justify"/>
            <TextBlock>A =</TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="0,0,10,0">1</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="0">2</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="1" Margin="0,0,10,0">3</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="1">4</TextBlock>
            </Grid>

            <TextBlock>B =</TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="0,0,10,0">5</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="0">6</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="1" Margin="0,0,10,0">7</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="1">8</TextBlock>
            </Grid>

            <TextBlock>Тогда A - B будет равно:</TextBlock>
            <TextBlock>A - B =</TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="0,0,10,0">1-5</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="0">2-6</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="1" Margin="0,0,10,0">3-7</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="1">4-8</TextBlock>
            </Grid>

            <TextBlock>То есть:</TextBlock>
            <TextBlock>A + B =</TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="0,0,10,0">-4</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="0">-4</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="1" Margin="0,0,10,0">-4</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="1">-4</TextBlock>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
