            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button ToolTip="Закрыть окно"  Content="Закрыть" FontSize="20" Grid.ColumnSpan="5" Grid.RowSpan="2" Grid.Column="10" Grid.Row="19" Click="Close_Click" />
        <Button ToolTip="Сохранение значений матриц, математического выражения и результата" FontSize="20" Grid.Row="16" Grid.Column="10" Content="Сохранить в файл" Click="Btn_Save_Click" Grid.ColumnSpan="5" Grid.RowSpan="2">
        </Button>
        <TextBlock FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="8" Text="Результат вычислений"  Grid.RowSpan="2" Grid.ColumnSpan="8"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" HorizontalContentAlignment="Center" Grid.ColumnSpan="23" Grid.Column="1" Margin="10,0" Grid.Row="3" Grid.RowSpan="12" HorizontalAlignment="Center" VerticalAlignment="Center">
            <WrapPanel x:Name="stackPanel" Orientation="Vertical">
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>
