        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Матричный_калькулятор"
        mc:Ignorable="d"
        Title="Теоретический материал" Height="750" Width="1000" MinHeight="750" MinWidth="1000" Background="#BDF9FF" FontSize="17" WindowStartupLocation="CenterScreen" Icon="/Images/Matrix_Icon.ico">
