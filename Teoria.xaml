        <TextBlock Grid.RowSpan="2" Grid.ColumnSpan="10" Grid.Column="9" Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center" FontSize="23">Основы матричных операций</TextBlock>
        <Button Content="Сложение матриц" Grid.ColumnSpan="5" Grid.RowSpan="4" Grid.Row="3" x:Name="AddMatrices_Btn" Click="AddMatrices_Btn_Click"/>
        <Button Content="Вычитание матриц" Grid.ColumnSpan="5" Grid.RowSpan="4" Grid.Row="9" x:Name="SubtractMatrices_Btn" Click="SubtractMatrices_Btn_Click"/>
        <Button Content="Умножение матриц" Grid.ColumnSpan="5" Grid.RowSpan="4" Grid.Row="15" x:Name="MultiplyMatrices_Btn" Click="MultiplyMatrices_Btn_Click"/>
        <Button Grid.ColumnSpan="5" Grid.RowSpan="4" Grid.Row="21" x:Name="TransposeMatrix_Btn" Click="TransposeMatrix_Btn_Click">
            <Button.Content>
                <TextBlock TextWrapping="Wrap" Text="Транспонирование матриц" TextAlignment="Center"/>
            </Button.Content>
        </Button>
        <Button Grid.ColumnSpan="5" Grid.RowSpan="4" Grid.Row="27" x:Name="MultiplyMatrixByScalar_Btn" Click="MultiplyMatrixByScalar_Btn_Click">
            <Button.Content>
                <TextBlock TextWrapping="Wrap" Text="Умножение матрицы на скаляр" TextAlignment="Center"/>
            </Button.Content>
        </Button>
        <Button Content="Назад" Grid.ColumnSpan="5" Grid.RowSpan="3" Grid.Row="33" Grid.Column="11" x:Name="Return_Btn" Click="Return_Btn_Click"/>
        <Frame NavigationUIVisibility="Hidden" x:Name="TeoriaFrame" Grid.Row="4" Grid.Column="6" Grid.ColumnSpan="20" Grid.RowSpan="28"/>
    </Grid>
</Window>
